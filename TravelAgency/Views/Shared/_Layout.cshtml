<!DOCTYPE html>
<html lang="en">
@using Microsoft.AspNetCore.Http

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelAgency</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/TravelAgency.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-dark.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body class="@ViewData["BodyClass"]">
    @{
        var isHome = (ViewContext.RouteData.Values["controller"]?.ToString() == "Home"
        && ViewContext.RouteData.Values["action"]?.ToString() == "Index");
    }

    <header>
        <nav class="navbar navbar-expand-lg fixed-top gallery-navbar">
            <div class="container">

                <!-- Brand (LEFT) -->
                <a class="navbar-brand gallery-brand" href="/Home/Index">
                    Travel Agency
                </a>

                <!-- Mobile toggler -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#galleryNav"
                        aria-controls="galleryNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="galleryNav">
                    <div class="ms-auto d-flex flex-wrap gap-2 align-items-center mt-3 mt-lg-0">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            var role = Context.Session.GetString("Role");

                            if (role == "User")
                            {
                                <a class="btn btn-outline-primary btn-sm gallery-btn" href="/Trips/Gallery">Trips</a>
                                <a class="btn btn-outline-primary btn-sm gallery-btn" href="/Booking/MyBookings">Cart</a>
                                <a class="btn btn-outline-secondary btn-sm gallery-btn" href="/Account/Profile">
                                    <i class="bi bi-person-circle me-1"></i> Profile
                                </a>
                            }

                            if (role == "Admin")
                            {
                                <a class="btn btn-outline-primary btn-sm gallery-btn" href="/Admin/Trips">Manage Trips</a>
                                <a class="btn btn-outline-primary btn-sm gallery-btn" href="/Admin/Users">User Management</a>
                            }

                            <a class="btn btn-danger btn-sm gallery-btn" href="/Account/Logout">Logout</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary btn-sm gallery-btn" href="/Account/Login">Login</a>
                            <a class="btn btn-outline-primary btn-sm gallery-btn" href="/Account/Register">Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @if (isHome)
    {
        <!-- Home page full width -->
        <main role="main">
            @RenderBody()
        </main>
    }
    else
    {
        <!-- All other pages keep the offset + container -->
        <div class="container gallery-page-offset">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (TempData["CancellationMessage"] != null)
    {
        <script>alert("@TempData["CancellationMessage"]");</script>
    }
    @if (TempData["UserAlreadyExists"] != null)
    {
        <script>alert("@TempData["UserAlreadyExists"]");</script>
    }
    @if (TempData["activeBookingsMessage"] != null)
    {
        <script>alert("@TempData["activeBookingsMessage"]");</script>
    }
    @if (TempData["PaymentMessage"] != null)
    {
        <script>alert("@TempData["PaymentMessage"]");</script>
    }

</body>
</html>
