        <div class="container d-flex justify-content-between align-items-center">

            <!-- Brand -->
            <a class="navbar-brand" href="/Trips/Gallery">Travel Agency</a>

            <!-- LEFT: Role-based navigation buttons -->
            <div class="d-flex gap-2">
                @if (Context.Session.GetInt32("UserId") != null)
                {
                    var role = Context.Session.GetString("Role");

                    if (role == "User")
                    {
                        <a class="btn btn-outline-light btn-sm" href="/Trips/Gallery">
                            Trips
                        </a>
                        <a class="btn btn-outline-light btn-sm" href="/Booking/MyBookings">
                            My Bookings
                        </a>
                    }

                    if (role == "Admin")
                    {
                        <a class="btn btn-outline-warning btn-sm" href="/Admin/Trips">
                            Manage Trips
                        </a>
                    }
                }
            </div>

            <!-- RIGHT: Auth buttons -->
            <div class="d-flex gap-2 align-items-center">
                @if (Context.Session.GetInt32("UserId") != null)
                {
                    <span class="text-white me-2">
                        Hello, @Context.Session.GetString("FullName")
                    </span>

                    <a class="btn btn-danger btn-sm" href="/Account/Logout">
                        Logout
                    </a>
                }
                else
