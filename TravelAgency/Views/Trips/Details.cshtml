@model TravelAgency.Models.Trip
@inject IConfiguration Configuration
@inject IHttpContextAccessor HttpContextAccessor
@using Microsoft.Data.SqlClient
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = !string.IsNullOrWhiteSpace(Model.PackageName)
        ? Model.PackageName
        : $"{Model.Destination}, {Model.Country}";
}

<section class="ta-section ta-trip-details">
    <div class="container">

        <div class="ta-header-card mb-4">
            <p class="section-subtitle mb-2">Trip details</p>
            <h2 class="h2 section-title mb-2">@ViewData["Title"]</h2>
            <p class="section-text mb-0">Plan, book, and review your next adventure.</p>
        </div>

        @{
            var gallery = new List<string>();

            var connStrImgs = Configuration.GetConnectionString("DefaultConnection");
            using (var connImgs = new SqlConnection(connStrImgs))
            {
                connImgs.Open();
                var imgCmd = new SqlCommand("SELECT ImagePath FROM TripImages WHERE TripId = @tid", connImgs);
                imgCmd.Parameters.AddWithValue("@tid", Model.TripId);

                using var r = imgCmd.ExecuteReader();
                while (r.Read())
                {
                    var p = r["ImagePath"]?.ToString();
                    if (!string.IsNullOrWhiteSpace(p))
                        gallery.Add(p);
                }
            }
        }

        @if (!string.IsNullOrEmpty(Model.ImagePath) || gallery.Count > 0)
        {
            <div class="ta-details-hero mb-4">
                <div id="tripGallery" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">

                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <div class="carousel-item active">
                                <img src="@Model.ImagePath" class="d-block w-100" alt="@ViewData["Title"]" />
                            </div>
                        }

                        @if (string.IsNullOrEmpty(Model.ImagePath) && gallery.Count > 0)
                        {
                            <div class="carousel-item active">
                                <img src="@gallery[0]" class="d-block w-100" alt="@ViewData["Title"]" />
                            </div>

                            @for (int i = 1; i < gallery.Count; i++)
                            {
                                <div class="carousel-item">
                                    <img src="@gallery[i]" class="d-block w-100" alt="@ViewData["Title"]" />
                                </div>
                            }
                        }
                        else
                        {
                            @foreach (var img in gallery)
                            {
                                <div class="carousel-item">
                                    <img src="@img" class="d-block w-100" alt="@ViewData["Title"]" />
                                </div>
                            }
                        }
                    </div>

                    @if ((!string.IsNullOrEmpty(Model.ImagePath) && gallery.Count > 0) || (string.IsNullOrEmpty(Model.ImagePath) && gallery.Count > 1))
                    {
                        <button class="carousel-control-prev" type="button" data-bs-target="#tripGallery" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>

                        <button class="carousel-control-next" type="button" data-bs-target="#tripGallery" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    }
                </div>
            </div>
        }

        <div class="row g-4 align-items-start">
            <div class="col-lg-7">
                <div class="card ta-details-card border-0">
                    <div class="card-header">About this trip</div>
                    <div class="card-body p-4">

                        <div class="ta-details-meta">
                            <div><i class="bi bi-tag me-2"></i><strong>Category:</strong> @Model.Category</div>
                            <div><i class="bi bi-calendar-event me-2"></i><strong>Start:</strong> @Model.StartDate.ToString("dd/MM/yyyy")</div>
                            <div><i class="bi bi-calendar-check me-2"></i><strong>End:</strong> @Model.EndDate.ToString("dd/MM/yyyy")</div>
                            <div><i class="bi bi-door-open me-2"></i><strong>Available rooms:</strong> @Model.AvailableRooms</div>
                            <div><i class="bi bi-cash-coin me-2"></i><strong>Price:</strong> ₪@Model.Price</div>
                            @if (Model.MinAge.HasValue)
                            {
                                <div><i class="bi bi-person-check me-2"></i><strong>Minimum age:</strong> @Model.MinAge.Value years</div>
                            }
                        </div>

                        <hr class="my-3" />
                        <p class="mb-0">@Model.Description</p>

                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="card ta-details-book border-0">
                    <div class="card-header">Book this trip</div>
                    <div class="card-body p-4">

                        @if (Model.AvailableRooms > 0)
                        {
                            if (ViewBag.IsBooked == true)
                            {
                                <button class="btn btn-success w-100" disabled>Booked</button>
                                <a class="btn btn-outline-primary w-100 mt-2" href="/Booking/MyBookings">My Bookings</a>
                            }
                            else
                            {
                                <form method="get" action="/Booking/BookNow">
                                    <input type="hidden" name="id" value="@Model.TripId" />

                                    <div class="mb-3">
                                        <label class="form-label">Rooms</label>
                                        <input type="number" name="qty" min="1" max="@Model.AvailableRooms" value="1" class="form-control" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Group minimum age</label>
                                        <input type="number" name="groupMinAge" min="@(Model.MinAge ?? 0)" max="120" class="form-control" placeholder="Group min age" @(Model.MinAge.HasValue ? "required" : "") />
                                        @if (Model.MinAge.HasValue)
                                        {
                                            <div class="form-text">This trip requires minimum age of <strong>@Model.MinAge</strong>.</div>
                                        }
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="submit" name="pay" value="true" class="btn btn-primary">Book & Pay</button>
                                        <button type="submit" name="pay" value="false" class="btn btn-outline-primary">Book (pay later)</button>
                                    </div>
                                </form>
                            }
                        }
                        else
                        {
                            <div class="alert alert-danger mb-0 text-center">Fully booked</div>
                        }

                        @if (ViewBag.IsBooked != true)
                        {
                            <div class="mt-3 d-flex flex-wrap gap-2">
                                <a href="/Trips/Gallery" class="btn btn-outline-primary">Back to Gallery</a>

                                @if (Context.Session.GetInt32("UserId") != null)
                                {
                                    if (ViewBag.IsInWaiting == true)
                                    {
                                        <form method="post" action="/WaitingList/Leave" class="d-inline">
                                            <input type="hidden" name="tripId" value="@Model.TripId" />
                                            <button class="btn btn-outline-danger">Leave Waiting List</button>
                                        </form>
                                        <span class="text-muted align-self-center">Position: <strong>@ViewBag.WaitPosition</strong></span>
                                    }
                                    else if (Model.AvailableRooms <= 0 || ViewBag.HasWaiting == true)
                                    {
                                        <form method="post" action="/WaitingList/Join" class="d-inline">
                                            <input type="hidden" name="tripId" value="@Model.TripId" />
                                            <button class="btn btn-outline-secondary">Join Waiting List</button>
                                        </form>
                                    }
                                }
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>

        <div class="mt-5">
            <div class="ta-review-header-card mb-3 text-center">
                <p class="section-subtitle mb-2">Reviews</p>
                <h3 id="reviews" class="h3 mb-0">User Reviews</h3>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @{
                var reviews = new List<dynamic>();

                var connStr = Configuration.GetConnectionString("DefaultConnection");
                using (var conn = new SqlConnection(connStr))
                {
                    conn.Open();
                    using var cmd = new SqlCommand(@"
        SELECT r.ReviewId, r.Rating, r.Comment, r.CreatedAt, u.FullName
        FROM Reviews r
        JOIN Users u ON r.UserId = u.UserId
        WHERE r.TripId = @tid
        ORDER BY r.CreatedAt DESC
        ", conn);

                    cmd.Parameters.AddWithValue("@tid", Model.TripId);

                    using var reader = cmd.ExecuteReader();
                    while (reader.Read())
                    {
                        reviews.Add(new
                        {
                            ReviewId = Convert.ToInt32(reader["ReviewId"]),
                            FullName = reader["FullName"]?.ToString() ?? "",
                            Rating = Convert.ToInt32(reader["Rating"]),
                            Comment = reader["Comment"] == DBNull.Value ? "" : reader["Comment"]?.ToString() ?? "",
                            CreatedAt = Convert.ToDateTime(reader["CreatedAt"])
                        });
                    }
                }
            }


            @if (reviews.Count == 0)
            {
                <div class="ta-review-empty card mb-3">
                    <div class="card-body">
                        <p class="mb-2 text-muted">No reviews yet. Be the first to review this trip!</p>
                        <p class="mb-0 text-muted">You can only rate trips you booked.</p>
                    </div>
                </div>
            }
            else
            {
                foreach (var r in reviews)
                {
                    <div class="card ta-review-card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start gap-3">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="ta-avatar" aria-hidden="true">@((r.FullName as string)?.FirstOrDefault().ToString().ToUpperInvariant())</div>

                                    <div>
                                        <div class="d-flex flex-wrap align-items-center gap-2">
                                            <strong class="ta-review-name">@r.FullName</strong>
                                            <span class="ta-review-date text-muted">@r.CreatedAt.ToString("dd/MM/yyyy")</span>
                                        </div>

                                        <div class="ta-review-rating" aria-label="Rating @r.Rating out of 5">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= r.Rating)
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="text-end">
                                    @if (HttpContextAccessor.HttpContext?.Session.GetString("Role") == "Admin")
                                    {
                                        <form asp-controller="Reviews" asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="reviewId" value="@r.ReviewId" />
                                            <input type="hidden" name="tripId" value="@Model.TripId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm ta-review-delete">Delete</button>
                                        </form>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrWhiteSpace((string)r.Comment))
                            {
                                <p class="ta-review-comment mb-0 mt-2">@r.Comment</p>
                            }
                        </div>
                    </div>
                }
            }

            @if (HttpContextAccessor.HttpContext?.Session.GetInt32("UserId") != null)
            {
                <div class="card ta-review-form mt-4">
                    <div class="card-header">Add your review</div>
                    <div class="card-body p-4">
                        <form asp-controller="Reviews" asp-action="Add" method="post" class="ta-review-form-inner">
                            <input type="hidden" name="tripId" value="@Model.TripId" />

                            <div class="mb-3">
                                <label class="form-label">Rating</label>
                                <div class="ta-rating-picker">
                                    <select name="rating" class="form-select" required>
                                        <option value="" selected disabled>Select rating...</option>
                                        <option value="5">★★★★★ (5)</option>
                                        <option value="4">★★★★☆ (4)</option>
                                        <option value="3">★★★☆☆ (3)</option>
                                        <option value="2">★★☆☆☆ (2)</option>
                                        <option value="1">★☆☆☆☆ (1)</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Comment (optional)</label>
                                <textarea name="comment" class="form-control" rows="3" maxlength="500" placeholder="Share what you liked, what to expect, or tips for other travelers..."></textarea>
                            </div>

                            <button class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            }

        </div>

    </div>
</section>
