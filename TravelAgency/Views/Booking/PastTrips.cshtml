@model List<TravelAgency.ViewModel.BookingViewModel>

@{
    ViewData["Title"] = "Past Trips";
}

<section class="ta-section ta-pasttrips">
    <div class="container">

        <div class="ta-header-card mb-4">
            <div class="d-flex justify-content-between align-items-start gap-3 flex-wrap">
                <div>
                    <p class="section-subtitle mb-2">Account</p>
                    <h2 class="h2 section-title mb-2">My Past Trips</h2>
                    <p class="section-text mb-0">Trips you already completed.</p>
                </div>

                <div class="d-flex gap-2 flex-wrap">
                    <a href="/Booking/MyBookings" class="btn btn-outline-primary">My Bookings</a>
                    <a href="/Trips/Gallery" class="btn btn-outline-primary">Back to Gallery</a>
                </div>
            </div>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="ta-review-empty card mb-3">
                <div class="card-body text-center">
                    <p class="mb-0 text-muted">You have no past trips yet.</p>
                </div>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var trip in Model)
                {
                    <div class="col-md-4 col-sm-6">
                        <div class="card past-trip-card border-0 overflow-hidden h-100">
                            <div class="ratio ratio-16x9 bg-light">
                                <img src="@(string.IsNullOrEmpty(trip.ImagePath) ? "/images/trips/default.jpg" : trip.ImagePath)"
                                     class="past-trip-img"
                                     alt="@trip.Destination"
                                     onerror="this.onerror=null; this.src='/images/trips/default.jpg';" />
                            </div>

                            <div class="card-body p-3">
                                <h5 class="past-trip-destination mb-1 text-capitalize">@trip.Destination</h5>
                                <div class="past-trip-country text-muted mb-2">@trip.Country</div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="past-trip-date">
                                        <i class="bi bi-calendar-event me-1"></i>@trip.StartDate.ToShortDateString()
                                    </small>

                                    <span class="badge past-trip-badge px-3 py-2 rounded-pill">Completed</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

    </div>
</section>
