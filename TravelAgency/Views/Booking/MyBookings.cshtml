@model List<TravelAgency.ViewModel.BookingViewModel>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container my-4">
    <h2 class="text-center mb-4">My Bookings</h2>

    @if (TempData["PaymentMessage"] != null)
    {
        <div class="alert alert-info">@TempData["PaymentMessage"]</div>
    }

    <div class="text-center mb-3">
        <a href="/Booking/PastTrips" class="btn btn-outline-primary">View Past Trips</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary text-center">
            You have no active bookings.
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var b in Model)
            {
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="row g-0">
                            <div class="col-md-3">
                                @if (!string.IsNullOrEmpty(b.ImagePath))
                                {
                                    <img src="@b.ImagePath" class="img-fluid h-100 w-100" style="object-fit:cover;" />
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center h-100" style="min-height:160px;">
                                        <span class="text-muted">No image</span>
                                    </div>
                                }
                            </div>

                            <div class="col-md-9">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h5 class="card-title mb-1">@b.Destination, @b.Country</h5>
                                            <div class="text-muted small">
                                                @b.StartDate.ToString("dd/MM/yyyy") - @b.EndDate.ToString("dd/MM/yyyy")
                                                @if (!string.IsNullOrEmpty(b.Category))
                                                {
                                                    <span> • @b.Category</span>
                                                }
                                            </div>
                                        </div>

                                        <div class="text-end">
                                            <div class="fw-bold">@((b.Price * b.Quantity).ToString("0.00")) ¤</div>
                                            @if (b.IsPaid)
                                            {
                                                <span class="badge bg-success">Paid</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Unpaid</span>
                                            }
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(b.Description))
                                    {
                                        <p class="mt-2 mb-2 text-muted">
                                            @(b.Description.Length > 140 ? b.Description.Substring(0, 140) + "..." : b.Description)
                                        </p>
                                    }

                                    <div class="row small">
                                        <div class="col-md-4">
                                            <div><strong>Rooms:</strong> @b.Quantity</div>
                                            <div><strong>Booked at:</strong> @b.BookingDate.ToString("dd/MM/yyyy HH:mm")</div>
                                        </div>

                                        <div class="col-md-4">
                                            <div>
                                                <strong>Trip min age:</strong>
                                                @(b.TripMinAge.HasValue? b.TripMinAge.Value.ToString() : "None")
                                            </div>
                                            <div>
                                                <strong>Your group min age:</strong>
                                                @(b.GroupMinAge.HasValue? b.GroupMinAge.Value.ToString() : "Not provided")
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div><strong>Cancellation:</strong> @b.CancellationDays day(s) before start</div>
                                            <div>
                                                <strong>Paid at:</strong>
                                                @(b.PaidAt.HasValue? b.PaidAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mt-3 d-flex gap-2 flex-wrap">
                                        <a href="/Trips/Details/@b.TripId" class="btn btn-outline-primary btn-sm">Details</a>
                                        <a href="/Trips/Details/@b.TripId#reviews" class="btn btn-outline-warning btn-sm">Rate / Review</a>

                                        @if (!b.IsPaid)
                                        {
                                            <a href="/Payment/Pay?bookingId=@b.BookingId" class="btn btn-success btn-sm">Pay</a>
                                        }

                                        <form method="post" action="/Booking/Cancel" class="d-inline">
                                            <input type="hidden" name="bookingId" value="@b.BookingId" />
                                            <button class="btn btn-danger btn-sm">Cancel</button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
