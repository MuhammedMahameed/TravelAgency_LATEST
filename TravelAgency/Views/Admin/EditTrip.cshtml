@model TravelAgency.Models.Trip

@{
    ViewData["Title"] = "Edit Trip";
    ViewData["BodyClass"] = "";
    var selectedCategory = (Model?.Category ?? string.Empty).Trim();
}

<section class="ta-section ta-admin-edittrip">
    <div class="container">

        <div class="ta-header-card mb-4">
            <div class="d-flex justify-content-between align-items-start gap-3 flex-wrap">
                <div>
                    <p class="section-subtitle mb-2">Admin</p>
                    <h2 class="h2 section-title mb-2">Edit Trip</h2>
                    <p class="section-text mb-0">Update trip details, images, and reviews.</p>
                </div>

                <div class="d-flex gap-2 flex-wrap">
                    <a href="/Trips/Details/@Model.TripId" class="btn btn-outline-primary">View Trip</a>
                    <a href="/Admin/Trips" class="btn btn-outline-primary">Back to Trips</a>
                </div>
            </div>
        </div>

        <form method="post" enctype="multipart/form-data" asp-action="EditTrip" asp-controller="Admin">
            <input type="hidden" name="TripId" value="@Model.TripId" />

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="card ta-admin-form-card">
                        <div class="card-body p-4 p-md-5">

                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label">Package Name</label>
                                    <input name="PackageName" value="@Model.PackageName" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.PackageName, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Destination</label>
                                    <input name="Destination" value="@Model.Destination" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.Destination, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Country</label>
                                    <input name="Country" value="@Model.Country" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Start Date</label>
                                    <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">End Date</label>
                                    <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Category</label>
                                    <select name="Category" class="form-select">
                                        @if (string.IsNullOrWhiteSpace(selectedCategory))
                                        {
                                            <option value="" selected disabled>Choose category...</option>
                                        }
                                        else
                                        {
                                            <option value="" disabled>Choose category...</option>
                                        }

                                        @if (selectedCategory == "Family")
                                        {
                                            <option value="Family" selected>Family</option>
                                        }
                                        else
                                        {
                                            <option value="Family">Family</option>
                                        }

                                        @if (selectedCategory == "Honeymoon")
                                        {
                                            <option value="Honeymoon" selected>Honeymoon</option>
                                        }
                                        else
                                        {
                                            <option value="Honeymoon">Honeymoon</option>
                                        }

                                        @if (selectedCategory == "Adventure")
                                        {
                                            <option value="Adventure" selected>Adventure</option>
                                        }
                                        else
                                        {
                                            <option value="Adventure">Adventure</option>
                                        }

                                        @if (selectedCategory == "Cruise")
                                        {
                                            <option value="Cruise" selected>Cruise</option>
                                        }
                                        else
                                        {
                                            <option value="Cruise">Cruise</option>
                                        }

                                        @if (selectedCategory == "Luxury")
                                        {
                                            <option value="Luxury" selected>Luxury</option>
                                        }
                                        else
                                        {
                                            <option value="Luxury">Luxury</option>
                                        }
                                    </select>
                                    @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-3">
                                    <label class="form-label">Price</label>
                                    <input type="number" step="0.01" name="Price" value="@Model.Price" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-3">
                                    <label class="form-label">Available Rooms</label>
                                    <input type="number" name="AvailableRooms" value="@Model.AvailableRooms" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.AvailableRooms, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Min Age</label>
                                    <input type="number" name="MinAge" value="@(Model.MinAge?.ToString() ?? "")" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.MinAge, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Cancellation Limit (days)</label>
                                    <input type="number" name="CancellationDays" min="0" max="365" value="@Model.CancellationDays" class="form-control" />
                                    <div class="form-text">Number of days prior to start date within which cancellations are NOT allowed. Enter 0 for no limit.</div>
                                </div>

                                <div class="col-12">
                                    <label class="form-label">Description</label>
                                    <textarea name="Description" class="form-control" rows="4">@Model.Description</textarea>
                                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Replace Main Image (optional)</label>
                                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Add Gallery Images (optional)</label>
                                    <input type="file" name="galleryImages" class="form-control" accept="image/*" multiple />
                                </div>

                                @if (ViewBag.Gallery != null && ((List<TravelAgency.Models.TripImage>)ViewBag.Gallery).Any())
                                {
                                    <div class="col-12">
                                        <label class="form-label">Existing Gallery</label>
                                        <div class="row g-3">
                                            @foreach (var img in (List<TravelAgency.Models.TripImage>)ViewBag.Gallery)
                                            {
                                                <div class="col-6 col-md-4">
                                                    <div class="ta-admin-gallery-item">
                                                        <img src="@img.ImagePath" class="ta-admin-gallery-img" alt="Gallery image" />
                                                        <div class="p-2">
                                                            <div class="form-check">
                                                                <input class="form-check-input delete-checkbox" type="checkbox" name="deleteImageIds" value="@img.ImageId" id="del_@img.ImageId" />
                                                                <label class="form-check-label" for="del_@img.ImageId">Delete</label>
                                                            </div>
                                                            <div class="form-check mt-1">
                                                                <input class="form-check-input" type="radio" name="setMainImageId" value="@img.ImageId" id="main_@img.ImageId" />
                                                                <label class="form-check-label" for="main_@img.ImageId">Set as main</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                <div class="col-12 d-flex gap-2 flex-wrap mt-2">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                    <a href="/Admin/Trips" class="btn btn-outline-primary">Cancel</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-lg-4">

                    <div class="card ta-admin-side-card mb-4">
                        <div class="card-header">Main Image</div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <img src="@Model.ImagePath" class="img-fluid ta-admin-side-img mb-2" alt="Main image" />
                                <div class="form-check">
                                    <input class="form-check-input delete-main" type="checkbox" name="deleteMainImage" id="deleteMainImage" value="true" />
                                    <label class="form-check-label" for="deleteMainImage">Remove main image</label>
                                </div>
                            }
                            else
                            {
                                <div class="text-muted">No main image</div>
                            }
                        </div>
                    </div>

                    <div class="card ta-admin-side-card mb-4">
                        <div class="card-header">Gallery Quick View</div>
                        <div class="card-body">

                            @if (ViewBag.Gallery != null && ((List<TravelAgency.Models.TripImage>)ViewBag.Gallery).Any())
                            {
                                <div class="d-flex flex-column gap-3 ta-admin-scroll">
                                    @foreach (var img in (List<TravelAgency.Models.TripImage>)ViewBag.Gallery)
                                    {
                                        <div class="ta-admin-quick-item">
                                            <img src="@img.ImagePath" class="img-fluid ta-admin-side-img" alt="Gallery image" />

                                            <div class="form-check mt-2">
                                                <input class="form-check-input delete-checkbox"
                                                       type="checkbox"
                                                       name="deleteImageIds"
                                                       value="@img.ImageId"
                                                       id="del_quick_@img.ImageId" />
                                                <label class="form-check-label" for="del_quick_@img.ImageId">Delete</label>
                                            </div>

                                            <div class="form-check mt-1">
                                                <input class="form-check-input"
                                                       type="radio"
                                                       name="setMainImageId"
                                                       value="@img.ImageId"
                                                       id="main_quick_@img.ImageId" />
                                                <label class="form-check-label" for="main_quick_@img.ImageId">Set as main</label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-muted">No gallery images</div>
                            }
                        </div>
                    </div>

                    <div class="card ta-admin-side-card">
                        <div class="card-header">Reviews & Ratings</div>
                        <div class="card-body">

                            @if (ViewBag.Reviews != null && ((IEnumerable<dynamic>)ViewBag.Reviews).Any())
                            {
                                <div class="d-flex flex-column gap-3 ta-admin-scroll">
                                    @foreach (var r in (IEnumerable<dynamic>)ViewBag.Reviews)
                                    {
                                        <div class="ta-admin-review-item">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <div class="fw-semibold">@r.FullName</div>
                                                    <div class="small text-muted">@(((DateTime)r.CreatedAt).ToString("dd/MM/yyyy HH:mm"))</div>
                                                </div>

                                                <div class="ta-review-rating" style="font-size:1.1rem;">
                                                    @{
                                                        int stars = (int)r.Rating;
                                                        for (int i = 1; i <= 5; i++)
                                                        {
                                                            if (i <= stars)
                                                            {
                                                                @:<i class="bi bi-star-fill"></i>
                                                            }
                                                            else
                                                            {
                                                                @:<i class="bi bi-star"></i>
                                                            }
                                                        }
                                                    }
                                                </div>
                                            </div>

                                            @if (!string.IsNullOrWhiteSpace((string)r.Comment))
                                            {
                                                <div class="mt-2">@r.Comment</div>
                                            }
                                            else
                                            {
                                                <div class="mt-2 text-muted small">(No comment)</div>
                                            }

                                            <div class="mt-3 text-end">
                                                <form method="post" action="/Reviews/Delete" class="d-inline">
                                                    <input type="hidden" name="reviewId" value="@r.ReviewId" />
                                                    <input type="hidden" name="tripId" value="@Model.TripId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this review?');">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-muted">No reviews yet</div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </form>

    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        (function(){
            // confirm when deleting gallery images
            document.querySelectorAll('.delete-checkbox').forEach(function(chk){
                chk.addEventListener('change', function(){
                    if(this.checked){
                        if(!confirm('Delete this gallery image?')){
                            this.checked = false;
                        }
                    }
                });
            });

            // confirm when deleting main image
            var mainChk = document.querySelector('.delete-main');
            if(mainChk){
                mainChk.addEventListener('change', function(){
                    if(this.checked){
                        if(!confirm('Remove the main image?')){
                            this.checked = false;
                        }
                    }
                });
            }
        })();
    </script>
}
