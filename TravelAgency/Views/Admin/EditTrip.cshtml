@model TravelAgency.Models.Trip

<h2>Edit Trip</h2>

<form method="post">
    <input type="hidden" name="TripId" value="@Model.TripId" />

    Destination: <input name="Destination" value="@Model.Destination" /><br />
    Country: <input name="Country" value="@Model.Country" /><br />
    Start Date: <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" /><br />
    End Date: <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" /><br />
    Price: <input type="number" step="0.01" name="Price" value="@Model.Price" /><br />
    Available Rooms: <input type="number" name="AvailableRooms" value="@Model.AvailableRooms" /><br />
    Category: <input name="Category" value="@Model.Category" /><br />
    Min Age: <input type="number" name="MinAge" value="@Model.MinAge" /><br />
    Description: <textarea name="Description">@Model.Description</textarea><br />

    <button type="submit">Update</button>
</form>