@{
    ViewData["Title"] = "Admin Dashboard";
    ViewData["BodyClass"] = "";
}

<section class="ta-section ta-admin">
    <div class="container">

        <div class="ta-header-card mb-4 text-center">
            <p class="section-subtitle mb-2">Admin</p>
            <h2 class="h2 section-title mb-2">Dashboard</h2>
            <p class="section-text mb-0">Manage the system from one central place.</p>
        </div>

        <div class="row g-4 justify-content-center">

            <div class="col-md-6 col-lg-4">
                <div class="card ta-admin-card h-100">
                    <div class="card-body p-4 text-center">
                        <div class="ta-admin-icon mb-3"><i class="bi bi-airplane"></i></div>
                        <h5 class="ta-admin-title mb-2">Manage Trips</h5>
                        <p class="text-muted mb-0">Add, edit, delete trips and manage availability.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 p-4 pt-0">
                        <a href="/Admin/Trips" class="btn btn-primary w-100">Go to Trips</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card ta-admin-card h-100">
                    <div class="card-body p-4 text-center">
                        <div class="ta-admin-icon mb-3"><i class="bi bi-people"></i></div>
                        <h5 class="ta-admin-title mb-2">User Management</h5>
                        <p class="text-muted mb-0">View users, manage accounts and see bookings.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 p-4 pt-0">
                        <a href="/Admin/Users" class="btn btn-primary w-100">Manage Users</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card ta-admin-card h-100">
                    <div class="card-body p-4 text-center">
                        <div class="ta-admin-icon mb-3"><i class="bi bi-percent"></i></div>
                        <h5 class="ta-admin-title mb-2">Discounts</h5>
                        <p class="text-muted mb-0">Set limited-time discounts for trips.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 p-4 pt-0">
                        <a href="/Admin/Trips" class="btn btn-primary w-100">Manage Discounts</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card ta-admin-card h-100">
                    <div class="card-body p-4 text-center">
                        <div class="ta-admin-icon mb-3"><i class="bi bi-envelope"></i></div>
                        <h5 class="ta-admin-title mb-2">Send Reminders</h5>
                        <p class="text-muted mb-0">Send email reminders for upcoming trips.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 p-4 pt-0">
                        <form method="post" action="/Admin/SendDepartureReminders" class="m-0">
                            <button type="submit" class="btn btn-outline-primary w-100">Send Now</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </div>
</section>
