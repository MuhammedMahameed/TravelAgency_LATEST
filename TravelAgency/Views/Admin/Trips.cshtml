@model List<TravelAgency.Models.Trip>

<link rel="stylesheet" href="~/css/admin-trips.css" />

<div class="login-page container-fluid py-4">
    <div class="container admin-page">

        <!-- ===== HEADER ===== -->
        <div class="admin-header d-flex justify-content-between align-items-center flex-wrap mb-4 pt-4">
            <h2 class="admin-title d-flex align-items-center">
                <i class="bi bi-globe-americas text-primary me-2"></i>
                Manage Trips
            </h2>
        </div>

        <!-- ===== CONTROLS ===== -->
        <div class="admin-controls d-flex flex-wrap align-items-center gap-3 mb-4">
            <a href="/Admin/AddTrip" class="btn btn-outline-success fw-semibold">
                <i class="bi bi-plus-circle"></i> Add New Trip
            </a>

            <!-- ðŸ”¹ NEW BUTTON: Process Waiting Lists -->
            <form method="post" action="/Admin/ProcessWaitingList" class="d-inline">
                <button type="submit" class="btn btn-outline-primary fw-semibold">
                    <i class="bi bi-clock-history"></i> Process Waiting Lists
                </button>
            </form>
        </div>

        <!-- ===== ALERTS ===== -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger shadow-sm mb-3">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success shadow-sm mb-3">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            </div>
        }

        <!-- ===== TABLE ===== -->
        <div class="admin-card border-0 p-4 rounded-4 bg-white shadow-sm">
            <div class="table-responsive">
                <table class="table align-middle admin-table mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Image</th>
                            <th>Destination</th>
                            <th>Country</th>
                            <th>Price</th>
                            <th>Rooms</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model)
                        {
                            <tr>
                                <!-- ====== IMAGE COLUMN ====== -->
                                <td>
                                    @if (!string.IsNullOrEmpty(t.ImagePath))
                                    {
                                        <img src="@t.ImagePath" alt="Trip Image"
                                             style="width:80px; height:60px; object-fit:cover; border-radius:8px; box-shadow:0 2px 6px rgba(0,0,0,0.15);" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No image</span>
                                    }
                                </td>

                                <!-- ====== EXISTING COLUMNS ====== -->
                                <td class="fw-semibold">@t.Destination</td>
                                <td>@t.Country</td>
                                <td>â‚ª@t.Price</td>
                                <td>@t.AvailableRooms</td>

                                <!-- ====== ACTION BUTTONS ====== -->
                                <td class="text-center">
                                    <a href="/Admin/EditTrip/@t.TripId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a href="/Admin/Discount/@t.TripId" class="btn btn-sm btn-outline-info me-1">
                                        <i class="bi bi-tag"></i> Discount
                                    </a>
                                    <a href="/Admin/WaitingList/@t.TripId" class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-hourglass-split"></i> Waiting List
                                    </a>
                                    <form asp-action="DeleteTrip" asp-controller="Admin" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@t.TripId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Are you sure you want to delete this trip?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
