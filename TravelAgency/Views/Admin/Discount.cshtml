@{
    ViewData["Title"] = "Apply Discount";
    var tripId = (int)ViewBag.TripId;
}

<h2>Apply Discount</h2>

<form asp-action="Discount" method="post">
    <input type="hidden" name="tripId" value="@tripId" />

    <div>
        <label>New Price:</label>
        <input type="number" step="0.01" name="newPrice" required />
    </div>

    <div>
        <label>Discount End Date:</label>
        <input type="datetime-local" name="endDate" required />
    </div>

    <button type="submit">Save Discount</button>
</form>

<a href="/Admin/Trips">Back</a>
