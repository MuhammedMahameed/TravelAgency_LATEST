@{
    ViewData["Title"] = "Apply Discount";
    var tripId = (int)ViewBag.TripId;
}

<link rel="stylesheet" href="~/css/admin-trips.css" />

<div class="admin-page container py-5">

    <div class="admin-header d-flex justify-content-between align-items-center flex-wrap mb-4">
        <h2 class="admin-title">
            <i class="bi bi-tag-fill text-primary me-2"></i>
            Apply Discount
        </h2>

        <a href="/Admin/Trips" class="btn btn-outline-secondary fw-semibold">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <div class="admin-card shadow-sm border-0 p-4 rounded-4 bg-white">

        <form asp-action="Discount" method="post">
            <input type="hidden" name="tripId" value="@tripId" />

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="bi bi-cash-coin me-1"></i> New Price:
                </label>
                <input type="number" step="0.01" name="newPrice" required class="form-control" />
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">
                    <i class="bi bi-calendar-event me-1"></i> Discount End Date:
                </label>
                <input type="datetime-local" name="endDate" required class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary fw-semibold">
                <i class="bi bi-save2 me-1"></i> Save Discount
            </button>
        </form>

    </div>

</div>
