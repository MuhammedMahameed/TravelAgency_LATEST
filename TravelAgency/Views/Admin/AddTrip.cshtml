@model TravelAgency.Models.Trip

<h2>Add Trip</h2>

<form method="post" enctype="multipart/form-data">
    Destination: <input name="Destination" /> @Html.ValidationMessageFor(x => x.Destination)<br />
    Country: <input name="Country" /><br />
    Start Date: <input type="date" name="StartDate" /><br />
    End Date: <input type="date" name="EndDate" /><br />
    Price: <input type="number" step="0.01" name="Price" /><br />
    Available Rooms: <input type="number" name="AvailableRooms" /><br />
    Category: <input name="Category" /><br />
    Min Age: <input type="number" name="MinAge" /><br />
    Description: <textarea name="Description"></textarea><br />
    <div class="mb-3">
        <label class="form-label">Trip Image</label>
        <input type="file" name="imageFile" multiple class="form-control" />
    </div>
    <button type="submit">Save</button>
</form>