@model TravelAgency.Models.Trip

<div class="container mt-4">
    <h2>Add New Trip</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="AddTrip" asp-controller="Admin" method="post" enctype="multipart/form-data" class="mt-4">

        <div class="mb-3">
            <label class="form-label fw-bold">Destination</label>
            <input asp-for="Destination" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Country</label>
            <input asp-for="Country" class="form-control" required />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" required
                       value="@(Model.StartDate.Year <= 1900 ? DateTime.Today.ToString("yyyy-MM-dd") : Model.StartDate.ToString("yyyy-MM-dd"))" />
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">End Date</label>
                <input asp-for="EndDate" type="date" class="form-control" required
                       value="@(Model.EndDate.Year <= 1900 ? DateTime.Today.AddDays(1).ToString("yyyy-MM-dd") : Model.EndDate.ToString("yyyy-MM-dd"))" />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Category</label>
            <input asp-for="Category" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Price</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Available Rooms</label>
            <input asp-for="AvailableRooms" type="number" min="1" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Main Image</label>
            <input type="file" name="imageFile" class="form-control" accept="image/*" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Additional Images (optional)</label>
            <input type="file" name="galleryImages" class="form-control" accept="image/*" multiple />
        </div>

        <button type="submit" class="btn btn-primary">Save Trip</button>
    </form>
</div>
