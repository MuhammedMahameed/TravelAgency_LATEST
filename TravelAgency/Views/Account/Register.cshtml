@model TravelAgency.Models.User

@{
    ViewData["Title"] = "Register";
    ViewData["BodyClass"] = "";
    ViewData["FullWidth"] = true;
}

<div class="ta-auth ta-auth--register">
    <div class="ta-auth-card">
        <div class="ta-auth-header">
            <h2 class="ta-auth-title">Create account</h2>
            <p class="ta-auth-subtitle">Join Travel Agency and start booking trips</p>
        </div>

        <div class="ta-auth-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger text-center">
                    Please fix the errors and try again
                </div>
            }

            <form method="post" asp-controller="Account" asp-action="Register">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input asp-for="FullName"
                           class="form-control"
                           placeholder="Your full name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email"
                           type="email"
                           class="form-control"
                           placeholder="name@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input asp-for="Password"
                           type="password"
                           class="form-control"
                           placeholder="Choose a password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-2">Register</button>
            </form>
        </div>

        <div class="ta-auth-footer">
            <span class="text-muted">Already have an account?</span>
            <a href="/Account/Login" class="ms-1">Login</a>
        </div>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
