@{
    ViewData["Title"] = "Login";
    ViewData["BodyClass"] = "";
    ViewData["FullWidth"] = true;
}

<div class="ta-auth ta-auth--login">
    <div class="ta-auth-card">
        <div class="ta-auth-header">
            <h2 class="ta-auth-title">Welcome back</h2>
            <p class="ta-auth-subtitle">Login to continue to Travel Agency</p>
        </div>

        <div class="ta-auth-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input name="email" type="email"
                           class="form-control"
                           placeholder="name@example.com"
                           required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input name="password" type="password"
                           class="form-control"
                           placeholder="Enter your password"
                           required />
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-2">Login</button>

                <div class="text-center mt-3">
                    <a href="/Account/ForgotPassword" class="fw-semibold">Forgot your password?</a>
                </div>
            </form>
        </div>

        <div class="ta-auth-footer">
            <span class="text-muted">Donâ€™t have an account?</span>
            <a href="/Account/Register" class="ms-1">Create one</a>
        </div>
    </div>
</div>
