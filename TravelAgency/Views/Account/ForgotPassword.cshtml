@{
    ViewData["Title"] = "Forgot Password";
    ViewData["BodyClass"] = "";
    ViewData["FullWidth"] = true;
}

<div class="ta-auth ta-auth--forgot">
    <div class="ta-auth-card">
        <div class="ta-auth-header">
            <h2 class="ta-auth-title">Reset password</h2>
            <p class="ta-auth-subtitle">Enter your registered email and we’ll send you a reset link.</p>
        </div>

        <div class="ta-auth-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center">
                    @TempData["Error"]
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["Success"]
                </div>
                TempData["Success"] = null;
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input name="email" type="email" class="form-control" required placeholder="name@example.com" />
                </div>

                <button type="submit" class="btn btn-primary w-100">Send reset link</button>
            </form>
        </div>

        <div class="ta-auth-footer">
            <a href="/Account/Login">Back to Login</a>
        </div>
    </div>
</div>
